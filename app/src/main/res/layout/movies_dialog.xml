<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?cardColor"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_same"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:id="@+id/imageMovie"
            android:visibility="visible"
            android:contentDescription="@null"
            android:src="@drawable/ic_add"
            android:layout_height="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/txtMovieName"
            android:text="@string/app_name"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/addFav"
               android:text="Add To Favourite"
               android:layout_marginTop="10dp"
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/ic_fav"
               android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Remove from favourite"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_remove"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pin to top"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_pin"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>